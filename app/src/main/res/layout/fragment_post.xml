<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="List Your Item"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/button_open_gallery"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_white_rec"
                android:orientation="vertical"
                android:clickable="true">

                <ImageView
                    android:id="@+id/buttonText"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/gallery" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Open Gallery"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/gallery_pic"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:padding="30dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Listing Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/edit_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingStart="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/edit_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_pricing_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pricing Type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/edit_item_pricing_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/pricing_type_free"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Free"
                        android:checked="true">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/pricing_type_paid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paid">

                    </RadioButton>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/edit_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:paddingStart="20dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:text="Confirm" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>